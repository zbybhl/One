<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmallCornerView">

        <!--背景颜色-->
        <attr name="scv_color" format="reference"/>
        <!--倾斜放向-->
        <attr name="scv_orientation" format="enum">
            <!--右角标，向左侧倾斜-->
            <enum name="right" value="0"/>
            <!--左角标，向右侧倾斜-->
            <enum name="left" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="AddTextImageView">

        <!--文本颜色-->
        <attr name="txt_color" format="reference"/>

        <!--背景图片-->
        <attr name="img_src" format="reference"/>

        <!--文本-->
        <attr name="txt_content" format="string"/>

    </declare-styleable>
</resources>